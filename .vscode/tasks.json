{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "PowerShell.exe",
    "isShellCommand": true,
    "args": [
        "-NoProfile"
    ],
    "echoCommand": true,
    "suppressTaskName": true,
    "showOutput": "never",
    "tasks": [
        {
            "taskName": "Push",
            "args": [
                "robocopy", "${workspaceRoot}", "A:\\scripts\\", "/S", "/xd", ".git", ".vscode", "/xf", "*.sublime-*", "/mir", "/b", "&", "robocopy", "${workspaceRoot}", "B:\\scripts\\", "/S", "/xd", ".git", ".vscode", "/xf", "*.sublime-*", "/mir", "/b"
            ],
            "isBuildCommand": true,
        }
        /*,
        {
            "taskName": "Check",
            "args": [
                "Invoke-ScriptAnalyzer", "${relativeFile}"
            ],
            "isTestCommand": true,
            "showOutput": "never"            
        }*/
    ]
}